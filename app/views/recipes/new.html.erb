<%= form_for @recipe do |f| %>
  <%= f.label :title, "Recipe:" %>
  <%= f.text_field :title %><br>

  <%= f.fields_for :ingredients do |ingredient| %>
    <%= ingredient.label :name, "Ingredient:" %>
    <%= ingredient.text_field :name %>

    <%= ingredient.label :quantity, "Quantity:" %>
    <%= ingredient.text_field :quantity %><br>
  <% end %>
  <br>
  <%= f.submit %>
<% end %>
